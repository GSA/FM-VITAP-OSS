
@{
    ViewBag.Title = "Reject Reasons - Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@*<fieldset class="searchForm">*@
@using (Html.BeginForm("Reject", "DataEntry", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="col-md-12">

            <div class="row" style="float: left;">
                <br />
                <label style="font: bold; font-size: large">Reject Reasons - Invoice</label>
                <br /><br />
            </div>
            <div>
                <br />
                @(Html.Kendo().RadioButton().Value("1").Label("Incorrect Indexing Information"))
