@model VITAP.Data.Models.Exceptions.InputViewModel

@{
    ViewBag.Title = "7BC Base Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
<div class="container-fluid">
    <div style="padding:10px">
        <div class="row">
            <div class="col-sm-1">
                <label>@Model.Label</label>
            </div>
            <div class="col-sm-3">

            </div>
            <div class="col-sm-2">
                <div class="pull-right" style="margin-bottom: 10px;">
                    <button type="button" class="btn btn-info btn-fixed-width pull-right">OK</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">

            </div>
            <div class="col-sm-2">
                <div class="pull-right" style="margin-bottom: 10px;">
                    <button type="button" class="btn btn-info btn-fixed-width pull-right">Cancel</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.InputTxt, new Dictionary<string, object> { { "class", "form-control" }, { "style","max-width:100%" } })
                </div>
            </div>
        </div>
    </div>
</div>
}